---
let dt;

try {
  const req = await fetch("http://localhost:4004/api/features?depth=1");
  dt = await req.json();
} catch (err) {
  console.log(err);
}
const geturl = (fn) => {
  console.log("http://localhost:4004" + fn);
  return "http://localhost:4004" + fn;
};
---

<div class="w-full">
  <div class="md:w-10/12 px-4 py-12 sm:px-4 lg:px-8 lg:py-20 mx-auto">
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-2">
      {
        dt.docs.map((record) => (
          <>
            <div class="card card-compact bg-base-100 shadow hover:shadow-xl hover:animate-[gray_1s_ease-in-out] hover:grayscale hover:cursor-pointer transition-all delay-200">
              <figure>
                <img
                  class="aspect-square md:size-full"
                  src={geturl(record.image.url)}
                  alt={record.image.alt}
                />
              </figure>
              <div class="card-body">
                <h2 class="card-title">{record.name}</h2>
                <p>{record.description}</p>
              </div>
            </div>
            {/*<div class="group shadow-lg shadow-slate-400 flex flex-col rounded-xl p-4 md:p-7 ">
